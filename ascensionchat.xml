<?xml version="1.0"?>
<Container version="2">
  <Name>ascensionchat</Name>
  <Repository>doctorbeefy/ascensionchat</Repository>
  <Registry>https://hub.docker.com/r/doctorbeefy/ascensionchat</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/bennylavaa/ascensionchat/issues</Support>
  <Project>https://github.com/bennylavaa/ascensionchat</Project>
  <Overview>A selfhosted chatbot for communication between Project Epoch and Discord.</Overview>
  <Category>Game:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/bennylavaa/ascensionchat/main/ascensionchat.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/Bennylavaa/wowchat-epoch/main/images/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Requires/>
  <Config Name="Discord Bot Token" Target="DISCORD_TOKEN" Default="" Mode="" Description="Discord bot token for integration" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Version Number" Target="VERSION_NUMBER" Default="3.3.5" Mode="" Description="Version number of the application" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Realm Build" Target="REALM_BUILD" Default="12340" Mode="" Description="Realm build version" Type="Port" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Game Build" Target="GAME_BUILD" Default="12340" Mode="" Description="Game build version" Type="Port" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Realmlist URL" Target="REALMLIST_URL" Default="game.project-epoch.net" Mode="" Description="URL for the realmlist" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Realm Name" Target="REALM_NAME" Default="Project Epoch" Mode="" Description="Name of the game realm" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="WoW Account" Target="WOW_ACCOUNT" Default="" Mode="" Description="World of Warcraft account name" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="WoW Password" Target="WOW_PASSWORD" Default="" Mode="" Description="World of Warcraft account password" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="WoW Character" Target="WOW_CHARACTER" Default="" Mode="" Description="Character name in World of Warcraft" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Invite Channels" Target="INVITE_CHANNELS" Default="" Mode="" Description="Channel where invite can be used if left blank no channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Kick Channels" Target="KICK_CHANNELS" Default="" Mode="" Description="Channel where kick can be used if left blank no channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Promote Channels" Target="PROMOTE_CHANNELS" Default="" Mode="" Description="Channel where promote can be used if left blank no channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Demote Channels" Target="DEMOTE_CHANNELS" Default="" Mode="" Description="Channel where demote can be used if left blank no channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="GMOTD Channels" Target="GMOTD_CHANNELS" Default="" Mode="" Description="Channel where GMOTD can be used if left blank no channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Who Channels" Target="WHO_CHANNELS" Default="" Mode="" Description="Channel where who can be used if left blank all channels can use it" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Configuration File" Target="CONF_FILE" Default="wowchat.conf" Mode="" Description="Path to the configuration file" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
</Container>
